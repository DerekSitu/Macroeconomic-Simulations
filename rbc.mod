close all;
%---------------------------------------------------------------
% 1. Defining variables
%---------------------------------------------------------------
 
var y c n x k r w z;
 
varexo epsilon;
 
parameters beta delta alpha rho theta;
 
%---------------------------------------------------------------
% 2. Calibration
%---------------------------------------------------------------
alpha   = 0.33;
beta    = 0.985;
delta   = 0.012;
rho=0.96;
theta=0.37;

%---------------------------------------------------------------
% 3. Model
%---------------------------------------------------------------
model;

1/c=1/c(+1)*beta*(1-delta+r(+1));
k = (1-delta)*k(-1)+x;
y = c + x;
y = exp(z) * k^alpha * n^(1-alpha);
r = alpha * y/k(-1);
w = theta/(1-theta) * c/(1-n);
z = rho * z(-1) + epsilon;
w = (1-alpha) * y/n;
end;

%---------------------------------------------------------------
% 4. Computation
%---------------------------------------------------------------
initval;
k = 3.2586;
y = 1.9098;
x = 0.0391;
n = 0.33;
w = 1.6398;
r = 0.1934128;
c = 1.87073;

z=1;
end;
steady;

shocks;
var epsilon;
stderr 1;
end;
 
steady;
stoch_simul(periods=3000, order=1, hp_filter = 1600);